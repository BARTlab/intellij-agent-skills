<idea-plugin>
    <id>com.bartlab.agentskills</id>
    <name>Agent Skills Manager</name>
    <vendor>B@RT</vendor>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <projectConfigurable
                instance="com.bartlab.agentskills.settings.SkillSettingsConfigurable"
                id="com.bartlab.agentskills.settings.SkillSettingsConfigurable"
                displayName="Agent Skills"
                parentId="tools"/>

        <postStartupActivity implementation="com.bartlab.agentskills.service.SkillScannerStartupActivity"/>

        <notificationGroup id="AgentSkills"
                           displayType="BALLOON"
                           isLogByDefault="true"/>
    </extensions>

    <actions>
        <action id="AgentSkills.StartChatSession"
                class="com.bartlab.agentskills.actions.StartChatSessionAction"
                text="Agent Skills List"
                description="List of available skills, generate MCP preset to clipboard">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>